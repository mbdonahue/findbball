body {
	width:100%;
	font-family: arial;
}

.header-unit {
  bottom: 0px;
    position: absolute;
    width: 100%;
}

.header {
	width: inherit;
	background: url(<%= asset_path 'header.jpg' %>) no-repeat;
	background-size: cover;
	background-position: center center;
	background-attachment: fixed;
	height: 500px;
	width: 100%;
}

h1.header-text{
	color: white;
	font-size: 90px;
	font-weight: 800;
	font-family: josefin sans;
	margin-top: 320px;
	text-align: right;	
	vertical-align: bottom;
}

.topper {    
    background: url(<%= asset_path 'header.jpg' %>) no-repeat;    
    background-position: center center;
    -webkit-background-size: cover;
       -moz-background-size: cover;
       -o-background-size: cover;
       background-size: cover;
    background-attachment:fixed;
       width: 100%;
    height:500px;
}

video {
	display: inline-block;
	width: 100%;
}

.navbar-default-custom{
	background-color:#f8f8f8;
	border-color:#e7e7e7;
	opacity: 0.7;
	color: black;
}

